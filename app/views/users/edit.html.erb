<% title "Edit Your Information" %>

<%= semantic_form_for( @user, :html => { :class => "normal_form" } ) do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name, :label => "First Name" %>
    <%= f.input :last_name, :label => "Last Name" %>
    <%= f.input :username %>
    <br />
    <%= image_tag @user.gravatar_url(:rating => 'PG', :size => 75) %> Your <%= link_to "Gravatar", 'http://gravatar.com', :target => :blank %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :city, :collection => @cities, :group_by => :state %>
    <% if current_user.try(:role) == 'admin' %>
      <%= f.input :role, :collection => User::ROLES, :include_blank => true %>
    <% end %>
  <% end %>
  
  <%= image_submit_tag 'update.png', :class => 'signup' %>
<% end %>