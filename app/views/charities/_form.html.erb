<%= semantic_form_for( @charity, :html => { :multipart => true, :class => "normal_form" } ) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <% unless @charity.photo_file_name.nil? %>
      <br />
      <%= image_tag @charity.photo.url(:thumb) %>
    <% end %>
    <%= f.input :description, :input_html => { :size => '40x6' } %>
  <% end %>
  <%= image_submit_tag 'submit.png', :class => 'signup' %>
<% end %>
