<%= semantic_form_for( @deal, :html => { :class => "normal_form"} ) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :company, :collection => @companies %>
    <%= f.input :city, :collection => @cities, :group_by => :state %>
    <%= f.input :regular_price %>
    <%= f.input :initial_discount %>
    <%= f.input :max_discount %>
    <%= f.input :max_threshold %>
    <%= f.input :deal_date, :as => :string %>
    <% if current_user.role == 'admin' %>
      <%= f.input :approved %>
    <% end %>
  <% end %>
  
  <%= image_submit_tag 'submit.png', :class => 'signup' %>
<% end %>
